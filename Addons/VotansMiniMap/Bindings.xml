<Bindings>
	<Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
		<Category name="SI_KEYBINDINGS_CATEGORY_VOTANS_MINIMAP">
			<Action name="VOTANS_TOGGLE_MAP_SHOW">
				<Down>VOTANS_MINIMAP:ToggleShowMap()</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_SHOW_HUD">
				<Down>VOTANS_MINIMAP:ToggleShowHUD()</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_SHOW_COMBAT">
				<Down>VOTANS_MINIMAP:ToggleShowCombat()</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_OUT">
				<Down>VOTANS_MINIMAP:ToogleZoom(true, VOTANS_MINIMAP.account.zoomOut)</Down>
				<Up>VOTANS_MINIMAP:ToogleZoom(false)</Up>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_IN">
				<Down>VOTANS_MINIMAP:ToogleZoom(true, VOTANS_MINIMAP.account.zoomIn)</Down>
				<Up>VOTANS_MINIMAP:ToogleZoom(false)</Up>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_PLUS">
				<Down>VOTANS_MINIMAP:StepZoom(true)</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_MINUS">
				<Down>VOTANS_MINIMAP:StepZoom(false)</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_OFFSET_FIX">
				<Down>VOTANS_MINIMAP:ToggleFixedOffset()</Down>
			</Action>
		</Category>
	</Layer>
	<Layer name="SI_KEYBINDINGS_LAYER_SIEGE" allowFallthrough="false">
		<Category name="SI_KEYBINDINGS_CATEGORY_VOTANS_MINIMAP">
			<Action name="VOTANS_TOGGLE_MAP_SHOW_SIEGE_HUD">
				<Down>VOTANS_MINIMAP:ToggleShowSiege()</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_OUT_SIEGE" hideAction="true" inheritsBindFrom="VOTANS_TOGGLE_MAP_ZOOM_OUT">
				<Down>VOTANS_MINIMAP:ToogleZoom(true, VOTANS_MINIMAP.account.zoomOut)</Down>
				<Up>VOTANS_MINIMAP:ToogleZoom(false)</Up>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_IN_SIEGE" hideAction="true" inheritsBindFrom="VOTANS_TOGGLE_MAP_ZOOM_IN">
				<Down>VOTANS_MINIMAP:ToogleZoom(true, VOTANS_MINIMAP.account.zoomIn)</Down>
				<Up>VOTANS_MINIMAP:ToogleZoom(false)</Up>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_PLUS_SIEGE" hideAction="true" inheritsBindFrom="VOTANS_TOGGLE_MAP_ZOOM_PLUS">
				<Down>VOTANS_MINIMAP:StepZoom(true)</Down>
			</Action>
			<Action name="VOTANS_TOGGLE_MAP_ZOOM_MINUS_SIEGE" hideAction="true" inheritsBindFrom="VOTANS_TOGGLE_MAP_ZOOM_MINUS">
				<Down>VOTANS_MINIMAP:StepZoom(false)</Down>
			</Action>
		</Category>
	</Layer>
</Bindings>